{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Jarvis",
  "version": "0.1.0",
  "identifier": "com.jarvis.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "J.A.R.V.I.S.",
        "width": 900,
        "height": 700,
        "minWidth": 400,
        "minHeight": 300,
        "center": true,
        "resizable": true,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "resources": [
      "resources/models/*"
    ],
    "icon": [
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
